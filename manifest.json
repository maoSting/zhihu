{
  "manifest_version": 2,
  "name": "zhihu helper",
  "default_locale": "en",
  "version": "0.1.1",
  "description": "zhihu helper",
  "icons": {
    "16": "static/images/icon_16.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "alarms",
    "notifications"
  ],
  "background": {
    "scripts": [
      "static/vendor/require/require.js",
      "apps/background/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.zhihu.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "static/js/jquery-3.6.0.min.js",
        "apps/content/contentScript.js"
      ]
    }
  ]
}